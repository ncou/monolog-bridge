{
    "name": "chiron/monolog-bridge",
    "description": "Give it a nice description!",
    "keywords": [],
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Chiron\\Monolog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\Monolog\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12.0"
    },
    "scripts": {
        "phpunit": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "phpstan": "phpstan analyse src --level=max"
    },
    "extra": {
        "chiron": {
            "providers": ["Chiron\\Monolog\\Provider\\MonologServiceProvider"],
            "bootloaders": [
                "Chiron\\Monolog\\Bootloader\\PublishMonologBootloader"
            ]
        }
    }
}
